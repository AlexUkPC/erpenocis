<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Category</th>
      <th>Name type color</th>
      <th>Needed quantity</th>
      <th>Unit</th>
      <th>Cote</th>
      <th>Brother</th>
      <th>Ordered quantity</th>
      <th>Supplier</th>
      <th>Supplier contact</th>
      <th>Order date</th>
      <th>Delivery date</th>
      <th>Obs</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.status %></td>
        <td><%= order.category %></td>
        <td><%= order.name_type_color %></td>
        <td><%= order.needed_quantity %></td>
        <td><%= order.unit %></td>
        <td><%= order.cote %></td>
        <td><%= order.brother_id %></td>
        <td><%= order.ordered_quantity %></td>
        <td><%= order.supplier_id %></td>
        <td><%= order.supplier_contact %></td>
        <td><%= order.order_date %></td>
        <td><%= order.delivery_date %></td>
        <td><%= order.obs %></td>
        <td><%= order.project_id %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

