<p>
  <strong>Nume:</strong>
  <%= @project.name %>
</p>

<p>
  <strong>Data inceput:</strong>
  <%= @project.start_date %>
</p>

<p>
  <strong>Data finalizare:</strong>
  
  <% if !@project.end_date %>
    In derulare
  <% else %>
    <%= @project.end_date %>
  <% end %>

</p>

<p>
  <strong>Valoare:</strong>
  <%= @project.value %>
</p>

<p>
  <strong>Observatii:</strong>
  <%= @project.obs %>
</p>

<p>
  <strong>Suma cheltuita:</strong>
  <%= expenses_amount(@project.id, @project.value) %>
</p>
<p>
  <strong>Profit:</strong>
  <%= profit(@project.id, @project.value) %>
</p>
<p>
  <strong>Profit%:</strong>
  <%= profit_proc(@project.id, @project.value) %>
</p>

<%= link_to 'Modifica proiect', edit_project_path(@project) %>
<hr>
<% if !current_page?(project_path(:show => 'invoices')) %>
  <h1>Comenzi</h1>

  <table>
    <thead>
      <tr>
        <th>Id</th>
        <th>Status</th>
        <th>Categorie</th>
        <th>Denumire/Tip/Nuanta</th>
        <th>Cant. necesara</th>
        <th>UM</th>
        <th>Cote</th>
        <th>brother_id</th>
        <th>Cant. comandata</th>
        <th>Furnizor</th>
        <th>Contact furnizor</th>
        <th>Data comanda</th>
        <th>Data livrare</th>
        <th>Observatii</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.status %></td>
          <td><%= order.category %></td>
          <td><%= order.name_type_color %></td>
          <td><%= order.needed_quantity %></td>
          <td><%= order.unit %></td>
          <td><%= order.cote %></td>
          <td><%= order.brother_id %></td>
          <td><%= order.ordered_quantity %></td>
          <td><%= order.supplier_id %></td>
          <td><%= order.supplier_contact %></td>
          <td><%= order.order_date %></td>
          <td><%= order.delivery_date %></td>
          <td><%= order.obs %></td>
          <td><%= if order.ordered_quantity>0 then  link_to 'Muta', move_order_order_path(order) end %></td>
          <td><%= link_to 'Modifica', edit_order_path(order) %></td>
          <td><%= link_to 'Sterge', order, method: :delete, data: { confirm: 'Esti sigur ca vrei sa stergi comanda?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Adauga comanda', new_order_path %>
<% end %>
<hr>
<% if !current_page?(project_path(:show => 'orders')) %>
  <h1>Facturi</h1>

  <table>
    <thead>
      <tr>
        <th>Id</th>
        <th>Descriere</th>
        <th>Categorie</th>
        <th>Furnizor</th>
        <th>Nr. factura</th>
        <th>Data factura</th>
        <th>Valoare factura fara TVA</th>
        <th>Valoare factura pt proiect fara TVA</th>
        <th>Cod</th>
        <th>Observatii</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @invoices.each do |invoice| %>
        <tr>
          <td><%= invoice.id %></td>
          <td><%= invoice.description %></td>
          <td><%= invoice.category %></td>
          <td><%= invoice.supplier %></td>
          <td><%= invoice.invoice_number %></td>
          <td><%= invoice.invoice_date %></td>
          <td><%= invoice.invoice_value_without_vat %></td>
          <td><%= invoice.invoice_value_for_project_without_vat %></td>
          <td><%= invoice.code %></td>
          <td><%= invoice.obs %></td>
          <td><%= link_to 'Modifica', edit_invoice_path(invoice) %></td>
          <td><%= link_to 'Sterge', invoice, method: :delete, data: { confirm: 'Esti sigur ca vrei sa stergi factura?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Adauga factura', new_invoice_path %>
<% end %>

