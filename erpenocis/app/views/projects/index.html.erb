<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Nume</th>
      <th>Data inceput</th>
      <th>Data finalizare</th>
      <th>Valoare</th>
      <th>Profit</th>
      <th>Profit %</th>
      <th>Observatii</th>
      <th>Este stoc?</th>
      <th>Ultima modificare</th>
      <th>Data ultimei modificari</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.id %></td>
        <td><%= project.name %></td>
        <td><%= project.start_date %></td>
        <td><%= project.end_date %></td>
        <td><%= project.value %></td>
        <td><%= profit(project.id, project.value) %></td>
        <td><%= profit_proc(project.id, project.value) %> %</td>
        <td><%= project.obs %></td>
        <td><%= project.stoc %></td>
        <td><%= @users.find(project.user_id).username %></td>
        <td><%= project.updated_at.strftime('%d/%m/%Y (ora: %H:%M)') %></td>
        <td><%= link_to 'Show Orders', project_path(project, :show => 'orders') %></td>
        <td><%= link_to 'Show Invoices', project_path(project, :show => 'invoices') %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

