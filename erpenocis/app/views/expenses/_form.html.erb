<%= form_with(model: expense) do |form| %>
  <% if expense.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

      <ul>
        <% expense.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :expense_type, value: @expense.expense_type %>

  <div class="field">
    <%= form.label :name, "Denumire cheltuiala" %>
    <%= form.text_field :name %>
  </div>
  <% if !@expense.name %>
    <%= form.fields_for :expense_values do |f| %>

      <div class="field">
        <%= f.label :value, "Suma" %>
        <%= f.number_field :value, step: 0.01 %>
      </div>

      <div class="field">
        <%= f.label :date, "Data cheltuiala" %>
        <%= f.date_field :date %>
      </div>

      <div class="field">
        <%= f.label :due_date, "Data scadenta" %>
        <%= f.date_field :due_date %>
      </div>

      <div class="field">
        <%= f.label :vat_taxes, "Taxe stat/TVA?" %>
        <%= f.check_box :vat_taxes %>
      </div>
    <% end %>
  <% elsif @expense_value %>
    <%= form.fields_for :expense_values, @expense_value do |f| %>

      <div class="field">
        <%= f.label :value, "Suma" %>
        <%= f.number_field :value, step: 0.01 %>
      </div>

      <div class="field">
        <%= f.label :date, "Data cheltuiala" %>
        <%= f.date_field :date %>
      </div>

      <div class="field">
        <%= f.label :due_date, "Data scadenta" %>
        <%= f.date_field :due_date %>
      </div>

      <div class="field">
        <%= f.label :vat_taxes %>
        <%= f.check_box :vat_taxes %>
      </div>
    <% end %>
    <% else %>
      <%= link_to 'Sterge cheltuiala', expense_path(expense,sm: @start_month, sy: @start_year, em: @end_month, ey: @end_year), method: :delete, data: { confirm: 'Esti sigur ca vrei sa stergi cheltuiala?' }, class: "btn btn-outline-danger btn-fw btn-sm" %>
  <% end %>
  <%= hidden_field_tag(:sm, @start_month) %>
  <%= hidden_field_tag(:sy, @start_year) %>
  <%= hidden_field_tag(:em, @end_month) %>
  <%= hidden_field_tag(:ey, @end_year) %>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
