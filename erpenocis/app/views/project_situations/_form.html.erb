<%= form_with(model: project_situation) do |form| %>
  <% if project_situation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project_situation.errors.count, "error") %> prohibited this project_situation from being saved:</h2>

      <ul>
        <% project_situation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% months = (1..12).to_a %>
  <% years = (2020..Date.today().strftime("%Y").to_i+10).to_a %>

  <div class="form-group row">
    <%= form.label :advance_invoice_date, "Data ff avans", class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= form.date_field :advance_invoice_date, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :advance_invoice_number, "FF avans", class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= form.text_field :advance_invoice_number, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :advance_payment_date, "Data avans", class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= form.date_field :advance_payment_date, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :advance_payment, "Avans", class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= form.number_field :advance_payment, step: 0.01, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :advance_month, "Luna comanda/avans", class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= form.select :advance_month, options_for_select(months, project_situation.advance_month), {include_blank: true}, {class: "form-control form-control-lg"} %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :advance_year, "An comanda/avans", class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= form.select :advance_year, options_for_select(years, project_situation.advance_year), {include_blank: true}, {class: "form-control form-control-lg"} %>
    </div>
  </div>

    </div>
  </div>
</div>
<div class="col-md-6 grid-margin stretch-card mb-0">
  <div class="card">
    <div class="card-body">

  <div class="form-group row">
    <%= form.label :closure_invoice_date, "Data ff finala", class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= form.date_field :closure_invoice_date, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :closure_invoice_number, "FF finala", class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= form.text_field :closure_invoice_number, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :closure_payment_date, "Data inchidere", class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= form.date_field :closure_payment_date, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :closure_payment, "Inchidere", class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= form.number_field :closure_payment, step: 0.01, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :closure_month, "Luna finalizare/rest de plata", class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= form.select :closure_month, options_for_select(months, project_situation.closure_month), {include_blank: true}, {class: "form-control form-control-lg"} %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :closure_year, "An finalizare/rest de plata", class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= form.select :closure_year, options_for_select(years, project_situation.closure_year), {include_blank: true}, {class: "form-control form-control-lg"} %>
    </div>
  </div>
  <%= hidden_field_tag(:sm, @start_month) %>
  <%= hidden_field_tag(:sy, @start_year) %>
  <%= hidden_field_tag(:em, @end_month) %>
  <%= hidden_field_tag(:ey, @end_year) %>
  <%= hidden_field_tag(:which_date, @which_date) %>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Renunta", project_situations_path(sm: @start_month, sy: @start_year, em: @end_month, ey: @end_year), class: "btn btn-outline-light" %>
  </div>
<% end %>
