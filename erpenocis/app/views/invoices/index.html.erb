<h1>Facturi</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Proiect</th>
      <th>Descriere</th>
      <th>Categorie</th>
      <th>Furnizor</th>
      <th>Nr. factura</th>
      <th>Data factura</th>
      <th>Valoare factura fara TVA</th>
      <th>Valoare factura pt proiect fara TVA</th>
      <th>Cod</th>
      <th>Observatii</th>
      <th>Ultima modificare</th>
      <th>Data ultimei modificari</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <% project = invoice.project %>
      <tr>
        <td><%= invoice.id %></td>
        <td><%= project.name %></td>
        <td><%= invoice.description %></td>
        <td><%= invoice.category %></td>
        <td><%= invoice.supplier %></td>
        <td><%= invoice.invoice_number %></td>
        <td><%= invoice.invoice_date %></td>
        <td><%= invoice.invoice_value_without_vat %></td>
        <td><%= invoice.invoice_value_for_project_without_vat %></td>
        <td><%= invoice.code %></td>
        <td><%= invoice.obs %></td>
        <td><%= @users.find(invoice.user_id).username %></td>
        <td><%= invoice.updated_at.strftime('%d/%m/%Y (ora: %H:%M)') %></td>
        <td><%= link_to 'Vezi proiect', project %></td>
        <td><%= link_to 'Modifica', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Sterge', invoice, method: :delete, data: { confirm: 'Esti sigur ca vrei sa stergi factura?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Adauga factura', new_invoice_path %>
