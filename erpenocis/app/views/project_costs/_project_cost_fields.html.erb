<div class="nested-fields ms-3 mb-3">
  <div class="field">
    <%= f.label :amount, "Suma" %>
    <%= f.number_field :amount, step: 0.01 %>
  </div>

  <div class="field">
    <%= f.label :month, "Luna" %>
    <%= f.number_field :month %>
  </div>
  
  <div class="field">
    <%= f.label :year, "An" %>
    <%= f.number_field :year, placeholder: "an" %>
  </div>

  <div class="actions">
    <%= link_to_remove_association "Sterge", f %>
  </div>
</div>